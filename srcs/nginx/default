server {
	listen 80;
	listen [::]:80;
	server_name localhost;
	return 301	https://$host$request_uri;
}

server {

	listen 443 ssl ;
	listen [::]:443 ssl ;
	server_name localhost;
	
	ssl on;
	ssl_certificate /etc/ssl/certs/nginx.crt;
	ssl_certificate_key /etc/ssl/private/nginx.key;
	
	location / {
	    try_files $uri $uri/ =404;
	}
}